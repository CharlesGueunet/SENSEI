#ifndef svtk_eigen_h
#define svtk_eigen_h

// SVTK should only be using MPL2 Eigen code.
#ifndef EIGEN_MPL2_ONLY
#define EIGEN_MPL2_ONLY
#endif

/* Use the eigen library configured for SVTK.  */
#cmakedefine01 SVTK_MODULE_USE_EXTERNAL_svtkeigen

#if SVTK_MODULE_USE_EXTERNAL_svtkeigen
# define SVTK_EIGEN(x) <Eigen/x>
#else
# define SVTK_EIGEN(x) <svtkeigen/eigen/x>
#endif

#endif
