#ifndef svtkm_diy_h
#define svtkm_diy_h

#include <svtkm/internal/Configure.h>

// Diy headers include windows.h. Use the following header file so that only the
// lean version of windows.h is included.
// (Without problematic macros like MIN, Max, GetMessage, etc)
#include <svtkm/internal/Windows.h>

/* Use the diy library configured for VTM-m. */
#cmakedefine01 SVTKM_USE_EXTERNAL_DIY

/* Whether to use MPI support in DIY */
#if !defined(SVTKM_ENABLE_MPI)
# define SVTKM_DIY_NO_MPI
#endif

/* initially, we disable DIY threads.
 * once we've sorted out how DIY threads and svtkm work together
 * we will make this configurable.*/
#define SVTKM_DIY_NO_THREADS

/* Need to provide a way to for Serialziation
 * specializations to be injected into the correct
 * namespace. This solves the issue while allowing
 * for SVTK-m to support an internal and external diy
 * existing at the same time. */
#if(SVTKM_USE_EXTERNAL_DIY)
# define mangled_diy_namespace diy
#else
# define mangled_diy_namespace svtkmdiy
#endif


#endif
